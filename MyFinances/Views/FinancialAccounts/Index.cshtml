@model IEnumerable<MyFinances.Models.FinancialAccount>

@{
    ViewBag.Title = "Index";
}

<h2>FinancialAccounts</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Account Balance")
        </th>
        <th>
            @Html.DisplayName("Currency")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.accountBalance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.currency)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.financialAccountID }) |
            @Html.ActionLink("Details", "Details", new { id=item.financialAccountID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.financialAccountID })
        </td>
    </tr>
}

</table>
